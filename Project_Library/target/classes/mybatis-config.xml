<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-config.dtd">
  
<!-- MyBatis 설정파일 -->
<configuration>
	<!-- 쿼리구문에 컬럼Alias 사용하지 않고 camelCase로 변경 -->
	<settings>
		<setting name="mapUnderscoreToCamelCase" value="true" />
	</settings>  
	
	<!-- 타입 앨리아스 -->
	<typeAliases>
    	<typeAlias type="com.fort4.dto.BookDTO" alias="BookDTO"/>
    	<typeAlias type="com.fort4.dto.MemberDTO" alias="MemberDTO"/>
	</typeAliases>
	
</configuration>
